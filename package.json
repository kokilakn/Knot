{
  "name": "knot",
  "version": "0.1.0",
  "description": "Knot â€“ Find Yourself in Every Photo (Full-stack monorepo)",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "bun install",
    "dev": "bun run dev:frontend & bun run dev:backend",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "build": "cd frontend && bun run frontend:prod",
    "start": "cd frontend && bun run start",
    "lint": "cd frontend && bun run lint",
    "db:push": "cd frontend && bun run db:push",
    "db:generate": "cd frontend && bun run db:generate",
    "db:migrate": "cd frontend && bun run db:migrate",
    "db:studio": "cd frontend && bun run db:studio",
    "frontend:prod": "cd frontend && bun run build && bun run db:migrate && bun run start",
    "backend:prod": "cd backend && bun run start"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "jimp": "^0.16.1",
    "mui": "^0.0.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8"
  }
}