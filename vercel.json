{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/faces/(.*)",
            "destination": "backend/src/server.js"
        },
        {
            "source": "/api/health",
            "destination": "backend/src/server.js"
        }
    ],
    "functions": {
        "backend/src/server.js": {
            "memory": 1024,
            "maxDuration": 30,
            "includeFiles": "backend/models/**"
        }
    }
}